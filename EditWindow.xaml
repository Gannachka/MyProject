<Window x:Class="MyProject.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProject"
        mc:Ignorable="d"
        Title="EditWindow" Height="570" Width="800"  ResizeMode="NoResize" >
    <Window.Background >

        <ImageBrush  ImageSource="Images/fon2.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border  Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="10" Grid.RowSpan="15" Background="#a1e5e4"></Border>
        <Border  Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="10" Grid.RowSpan="3" Background="#62b6b5" ></Border>
        <Image Source="Images/logo.png" Grid.ColumnSpan="5" Margin="10.36,-23,55.64,4.6" Grid.RowSpan="4" Grid.Column="2"/>
        <WrapPanel Orientation="Vertical" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="9" Grid.RowSpan="11"  HorizontalAlignment="Left" Margin="0.2,0.6,0,9.8" Width="469" >
