            <TextBox Margin="10,0,0,0" MinHeight="29"/>
            <Label  HorizontalContentAlignment="Left" FontSize="16" FontFamily="Yu Gothic UI Semilight" Margin="10,0,0,0" Content="Имя" />
            <TextBox MinHeight="29" Margin="10,0,0,0"/>
            <Label  HorizontalContentAlignment="Left" FontSize="16" FontFamily="Yu Gothic UI Semilight" Margin="10,0,0,0"  Content="E-mail" />
            <TextBox Margin="10,0,0,0" MinHeight="29"/>
            <Label  HorizontalContentAlignment="Center" FontSize="16" Margin="80,0,0,0" FontFamily="Yu Gothic UI Semilight" MinHeight="32" MinWidth="158"  Content="День рождения" Width="206" />
            <Calendar Margin="10,0,30,30" Width="179"  />
            <Button Content="Редактировать" Height="60" Width="132"  Background="#FF8989"  BorderThickness="4" BorderBrush="#A62D2D" FontSize="14" FontStyle="Italic" Focusable="False"  FontWeight="SemiBold">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>

        </WrapPanel>


    </Grid>
</Window>